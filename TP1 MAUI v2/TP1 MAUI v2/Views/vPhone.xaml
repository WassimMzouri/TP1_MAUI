<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1_MAUI_v2.Views.vPhone"
             Title="vPhone">
    
    <VerticalStackLayout Spacing="20" Margin="10" >
     

        <Label
            Text="Info Téléphone"
            FontSize="22"
            HorizontalOptions="Center"
            />
        <Label
            x:Name="lbPhoneInfo"
            FontSize="22"
            HeightRequest="240"
            HorizontalOptions="Center"
            />
    </VerticalStackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ecran" Clicked="Ecran_Clicked" IconImageSource="{FontImage Glyph='E', Color=White, Size=22}" />
        <ToolbarItem Text="Batterie" Clicked="Batterie_Clicked" IconImageSource="{FontImage Glyph='E', Color=White, Size=22}" />
    </ContentPage.ToolbarItems>
    
    
</ContentPage>